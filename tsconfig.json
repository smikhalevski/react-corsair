{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "ES2018",
    "module": "ES6",
    "outDir": "./lib",
    "jsx": "react",
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
